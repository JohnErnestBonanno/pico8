function ipickups()
	pu={
	x=63,
	y=50,
	act=true
	}
	tomato=0
end

function upickups()
	if pu.act then
		if abs(plr.x-pu.x)<=4 and abs(plr.y-pu.y)<=4 then
			pv.act=false
			tomato+=1
		end
	end	
end

function dpickups()
	if pv.act then
		spr(4,pu.x,pu.y,2,2)
	end
print("tomato: "..tomato,10,10,7)
end
