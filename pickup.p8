function _init()
	plr={
	x=63,
	y=0,
	f=false,
	sp=1
	}

	anitimer=0
	ipickups()
end

function _update()
	if btn(⬇️) then	plr.y+=1 end
	if btn(⬆️) then plr.y-=1	end
	if btn(➡️) then plr.x+=1 end
	if btn(⬅️) then plr.x-=1 end
	
upickups()
end

function _draw()
	cls()
	map()
	spr(plr.sp,plr.x,plr.y,2,2)
--	dpickups()
end

