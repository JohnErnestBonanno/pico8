version 42
__lua__
function _init()
	
	plr={
		x=30,
		y=113,
		spd=3,
		sprite=1}

end

function _update()
	if btn(➡️) then
		plr.x=plr.x+1
	end 
	
	if btn(⬅️) then
		plr.x=plr.x-1
	end

end

function _draw()
	cls()
	map()
	spr(plr.sprite,plr.x,plr.y)
end
