version 42
__lua__
function _init()
	
-- player class -- 
	player={
		x=63,
		y=63,
		flip_y = false
	} 
end

function _update()

-- x movement --
	if btn(➡️) then
		player.x+=1
		player.flip_y=false
	end
	
	if btn(⬅️) then 
		player.x-=1
		player.flip_y=true
	end

-- y movement -- 
	if btn(⬆️) then
		player.y-=1
	end
	
	if btn(⬇️) then 
		player.y+=1
	end
end

function _draw()
	cls() -- clear screen
	spr(
		1, -- which sprite
		player.x, -- x coor
		player.y, -- y coor
		1, -- width
		1, -- height
		player.flip_y)

end


