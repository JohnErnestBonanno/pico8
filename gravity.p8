version 42
__lua__
function _init()
	col=false
	gravity=1
	plr={
		x=30,
		y=30,
		dx=0,
		j=0,
		f=false,
		--gravity--
		g1x=3,
		g2x=4,
		gy=7
		--end gravity--
		}
end

--horizontal movement--
function _update()
	plr.dx=0
	if btn(⬅️) then
		plr.dx=-1
		plr.f=true
	elseif btn(➡️) then
		plr.dx=1
		plr.f=false
	end
	plr.x+=plr.dx
	
	--apply gravity--
	if mget(plr.x/8,(plr.y+7)/8)~=4 then
	plr.y+=gravity
	end

end

function _draw()
	cls()
	map()
	spr(2,plr.x,plr.y,1,1,plr.f)
	
	

end		
