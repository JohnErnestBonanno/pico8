__lua__
--particles
--no built in particle systems

-- add random color

function _init()
	parts={}	
end

function _update()
	if btnp(âŽ) then
		for i=1,10 do
			add(parts,{
					x=63,
					y=63,
					sx=rnd(2)-1,
					sy=rnd(2)-1,
					col=flr(rnd(16))
					})
			end
	end
	
	for p in all(parts) do 
		p.x+=p.sx
		p.y+=p.sy
		
		--delete particles
		if p.x>128 or p.x<0 or p.y>128 or p.y<0 then
			del(parts,p)
	end
end
end

function _draw()
	cls()
	for p in all(parts) do
		circfill(p.x,p.y,3,p.col) 
	end
end

