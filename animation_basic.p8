pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
function _init()
	sprite=1
	sprite_timer = 0
	animation_speed = 10
	first_frame = 1
	last_frame = 4
end

function _update()

	if btn(➡️) then -- animation triggers on button press
		if sprite_timer <animation_speed then 
			sprite_timer+=1
			else
				if sprite <last_frame then
					sprite+=1
				else
					sprite=first_frame
				end	
				sprite_timer = 0
			end	
	end 

end

function _draw()
	cls()
	spr(sprite,63,63)

end 
