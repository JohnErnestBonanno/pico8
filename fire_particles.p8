pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
function _init()
	
	parts={}
	
end

function _update()
	
	for i=1,20 do
	
		add(parts,{
		x=40+rnd(20),
		y=80+rnd(20),
		r=rnd(3),
		c=11,
		life=20,
		speed=1+rnd(2)
		})
	end
	
	for p in all(parts) do
		p.y-=p.speed
		p.life -=1
		if p.life<0 then
			del(parts,p)
		end
	end
end

function _draw()
	cls()
	
	for p in all(parts) do 
		circfill(p.x, p.y, p.r, p.c)
	end
	
	
end
