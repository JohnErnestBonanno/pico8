pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
function _init()
	
	parts={}
	
	force=-3
	force_d=1
	
end

function _update()

	force+= .1 * force_d
	
	if force>3 or force<-3 then
		force_d=force_d*-1
	end
	
	for i=1,20 do
	
		add(parts,{
		x=40+rnd(20),
		y=80+rnd(20),
		r=rnd(3),
		c=10,
		life=10,
		speed=1+rnd(2)
		})
	end
	
	for p in all(parts) do
		p.y-=p.speed
		p.life -=1
		p.r-=.1
	-- add wind
		p.x+=force
		
		if p.life<5 then
			p.c=9
		end
		
		if p.life<0 then
			del(parts,p)
		end
	end
end

function _draw()
	cls()
	
	for p in all(parts) do 
		circfill(p.x, p.y, p.r, p.c)
	end
	
	
end
