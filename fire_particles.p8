pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
--more randomness 
--particles feel more organic

function _init()
	
	parts={}
	
	force=-1
	force_d=1
	
end

function _update()

	force+= .1 * force_d*rnd(1)
	
	if force>1 or force<-1 then
		force_d=force_d*-1
	end 
	
	for i=1,20 do
	
		add(parts,{
		x=57+rnd(10),
		y=90+rnd(10),
		r=rnd(3),
		c=7,
		life=13,
		speed=1+rnd(2)
		})
	end
	
	for p in all(parts) do
		p.y-=p.speed
		p.life -=1
		p.r-=.1
	-- add wind
		p.x+=force
		
		if p.life<11 then
			p.c=10
		end
		
		if p.life<8 then
			p.c=9
		end
		
		if p.life<0 then
			del(parts,p)
		end
	end
end

function _draw()
	cls()
	
	for p in all(parts) do 
		circfill(p.x, p.y, p.r, p.c)
	end
	
	
end
